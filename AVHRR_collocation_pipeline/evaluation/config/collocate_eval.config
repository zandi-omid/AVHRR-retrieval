[paths]
l2_dir   = "/ra1/pubdat/AVHRR_CloudSat_proj/SIMON_CODES/compare_new_old_retrieval_framework/new/"
#out_dir  = "/scratch/omidzandi/evaluation/2010_collocated_with_ref_preci_test"
out_dir = "/ra1/pubdat/AVHRR_CloudSat_proj/SIMON_CODES/compare_new_old_retrieval_framework/new/L2_collocated/"
pattern  = "*_L2.nc"

imerg_dir = "/ra1/pubdat/AVHRR_CloudSat_proj/IMERG/IMERGV7/Data_V7_halfhourly_2010/"
era5_dir  = "/ra1/pubdat/AVHRR_CloudSat_proj/ERA5_0.25deg/"
merra2_dir = "/ra1/pubdat/AVHRR_CloudSat_proj/MERRA2/merra2_archive_19800101_20251231/"

[grid]
resolution_deg = 0.25
lat_thresh_nh  = 45.0
lat_thresh_sh  = -45.0

[vars]
# variables to read from the L2 swath file into the DF
#avh_vars = ["temp_11_0um_nom", "temp_12_0um_nom", "retrieved"]
avh_vars = ["temp_11_0um_nom", "temp_12_0um_nom"]

# ERA5
era5_var   = "tp"
era5_outcol = "ERA5_tp"
era5_scale = 1000.0

# MERRA2
merra2_vars = ["TQV", "T2M"]

# # variables to grid into the output WGS netcdf
grid_vars = ["temp_12_0um_nom", "IMERG_preci", "ERA5_tp", "TQV", "T2M", "retrieved"]

[flags]
use_imerg = true
use_merra2 = true